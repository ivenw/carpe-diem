<link rel="stylesheet" href="template.css">

<head>
    <style>
        .github::marker {
            content: url (media/{{contact.github.logo}});
        }

        .linkedin::marker {
            content: url (media/{{contact.linkedin.logo}});
        }

        .location {
            list-style-type: 'üìç';
        }

        .phone {
            list-style-type: 'üìû';
        }

        .mail {
            list-style-type: '‚úâÔ∏è';
        }
    </style>
</head>

<body>
    <div class="page">
        <div class="header">
            <div>
                {{info.name}}
                {{info.tagline}}
            </div>
            <div class="avatar">
                <img src="media/{{info.avatar}}">
            </div>
        </div> <!-- header -->

        <div class=" column-wrapper">
            <div class="column-left">
                <div class="list" id="skills">
                    <h2>Skills</h2>
                    <hr>
                    <ul>
                        {{#each skills.core}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div> <!-- skills -->

                <div class="list" , id="technical-summary">
                    <h2>Techichal Summary</h2>
                    <hr>
                    <ul>
                        {{#each skills.technical}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div> <!-- technical-summary -->

                <div class="list" id="languages">
                    <h2>languages</h2>
                    <hr>
                    <ul>
                        {{#each skills.languages}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div> <!-- languages -->

                <div class="list" id="contact">
                    <h2>Contact</h2>
                    <hr>
                    <ul>
                        {{#if contact.github}}
                        <li id="github"><a href={{contact.github.url}}>{{contact.github.text}}</a></li>
                        {{/if}}
                        {{#if contact.linkedin}}
                        <li id="linkedin"><a href={{contact.linkedin.url}}>{{contact.linkedin.text}}</a></li>
                        {{/if}}
                        <li id="email"><a href="mailto://{{contact.email}}">{{contact.email}}</a></li>
                        <li id="phone">{{contact.phone}}</li>
                        <li id="location">{{contact.location}}</li>
                    </ul>
                </div> <!-- contact -->
            </div> <!-- column-left -->

            <div class="column-right">
                <div class="block" id="about">
                    <h2>About me</h2>
                    <hr>
                    <p>{{info.about}}</p>
                </div>

                <div class="block" id="experience">
                    <h2>Experience</h2>
                    <hr>
                    {{#each experience}}
                    <div class="exp">
                        <div class="exp__logo">
                            <img src="media/{{this.logo}}">
                        </div>
                        <div class="exp__name">
                            <h3>{{this.title}}</h3>
                            <span class="exp__date">
                                <h4>{{this.company}}</h4>
                                <h4>{{this.date}}</h4>
                            </span>
                        </div>
                        {{#if this.bulletpoints}}
                        <ul>
                            {{#each this.bulletpoints}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </div> <!-- exp -->
                    {{/each}}
                </div> <!-- experience -->
            </div> <!-- column-right -->
        </div> <!-- column-wrapper -->
    </div> <!-- page -->

    <div class="page">
        <div class="column-wrapper">
            <div class="column-left">
                <h2>References</h2>
                <hr>
                {{#each references}}
                <div class="reference">
                    <p class="quote">{{this.quote}}</p>
                    <p class="by">{{this.name}}</p>
                    <p class="role">{{this.role}}</p>
                </div>
                {{/each}}
            </div> <!-- column-left -->

            <div class="colummn-right">
                <div class="education">
                    <h2>Education</h2>
                    <hr>
                    {{#each education}}
                    <div class="exp">
                        <div class="exp__logo">
                            <img src="media/{{this.logo}}">
                        </div>
                        <div class="exp__name">
                            <h3>{{this.title}}</h3>
                            <span class="exp__date">
                                <h4>{{this.school}}</h4>
                                <h4>{{this.date}}</h4>
                            </span>
                        </div>
                        {{#if this.bulletpoints}}
                        <ul>
                            {{#each this.bulletpoints}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </div> <!-- exp -->
                    {{/each}}
                </div> <!-- education -->

                <div class="personal">
                    <h2>Personal</h2>
                    <hr>
                    <p>{{info.personal}}</p>
                </div>
            </div> <!-- column-right -->
        </div> <!-- column-wrapper -->
    </div> <!-- page -->
</body>